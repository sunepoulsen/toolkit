<?xml version="1.0"?>
<resource>
    <string key="appname" value="QtSqlManager" />
    <string key="title" value="${appname}" />

    <!-- ====================================================================================== -->
    <!-- Menu & Toolbar resources                                                               -->
    <!-- ====================================================================================== -->

    <actions key="mainmenu">
        <submenu title="&amb;File">
            <action title="&amb;Quit" command="quit" icon="exit.png" shortcut="Ctrl+Q">
                <statustip>
                    Quits ${title}
                </statustip>
            </action>
        </submenu>
        <submenu title="&amb;Edit">
            <action title="&amb;Undo" command="undo" icon=":/resources/edit-undo.png">
                <statustip>
                    Undo last operation.
                </statustip>
            </action>
            <action title="&amb;Redo" command="redo" icon=":/resources/edit-redo.png">
                <statustip>
                    Redo last operation.
                </statustip>
            </action>
            <seperator />
            <action title="C&amb;ut" command="cut" icon=":/resources/edit-cut.png">
                <statustip>
                    Move the selected item to the clipboard.
                </statustip>
            </action>
            <action title="&amb;Copy" command="copy" icon=":/resources/edit-copy.png">
                <statustip>
                    Copy the selected item to the clipboard.
                </statustip>
            </action>
            <action title="&amb;Paste" command="paste" icon=":/resources/edit-paste.png">
                <statustip>
                    Paste the last item from the clipboard.
                </statustip>
            </action>
            <action title="&amb;Delete" command="delete" icon=":/resources/edit-delete.png">
                <statustip>
                    Deletes the selected items.
                </statustip>
            </action>
            <seperator />
            <action title="&amb;Select all" command="select-all" icon=":/resources/edit-select-all.png">
                <statustip>
                    Selects all items.
                </statustip>
            </action>
        </submenu>
        <submenu title="&amb;Help">
            <action title="&amb;About..." command="about">
                <statustip>
                    Show copyright information about ${title}
                </statustip>
            </action>
            <action title="&amb;About Qt..." command="about-qt">
                <statustip>
                    Show copyright information about Qt
                </statustip>
            </action>
        </submenu>
    </actions>

    <menu key="main" actions="mainmenu" />
</resource>

